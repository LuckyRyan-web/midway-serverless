{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": false,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "stripInternal": true,
        "skipLibCheck": true,
        "pretty": true,
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "types": [
           "node",
           "jest"
        ]
    },
    "exclude": [
          "./dist",
          "node_modules"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
